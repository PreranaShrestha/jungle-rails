    <td><%= f.password_field :password_confirmation, placeholder: "Password confirmation", class:'form-control' %></td>
  </tr>
  <tr>
    <td><%= f.text_field :first_name, placeholder: "First Name", class:'form-control' %></td>
  </tr>
  <tr>
