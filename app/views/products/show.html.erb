
<% flash.each do |key, value| %>
  <div class="error"><%= value %></div>
<% end %>

<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Average review</dt>
          <dd>
          <% for i in 1..@product.average_rating.to_i %>
              <i class="fa fa-star" style="font-size:24px"></i>
          <% end %>
          <% for i in @product.average_rating.to_i..4 %>
            <i class="fa fa-star-o" style="font-size:24px"></i>
          <% end %>
          </dd>
        </dl>
      </div>
    </div>


  </article>


  <% if current_user %>
    <h4> Enter Reviews </h4>
     <div class="well">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-1">
        <%= form_for [@product, @review] do |f| %>
         <div class="field">
           <%= f.label :rating %><br>
           <%= f.select :rating, ['1', '2', '3', '4', '5'] %>
         </div>
         <div class="field">
           <%= f.label :description %><br>
           <%= f.text_field :description, class: 'form-control' %>
         </div>
         <div class="actions">
          <%= f.submit %>
        </div>
         <% end %>
      </div>
      </div>
    </div>
  <% end %>

  <%= render 'products_review' %>
</section>
