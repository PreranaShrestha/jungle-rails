<%if @reviews.length != 0 %>
    <article>
      <h4> Reviews </h4>
      <table class="table table-bordered">
        <tr >
          <th>Rating </th>
          <th>Description</th>
        </tr>
        <% @reviews.each do |review|  %>
          <tr>
            <td>
              <% for i in 1..review.rating %>
                <i class="fa fa-star" style="font-size:24px"></i>
              <% end %>
              <% for i in review.rating..4 %>
                <i class="fa fa-star-o" style="font-size:24px"></i>
              <% end %>
            </td>
            <td><%= review.description %></td>
            <td>
              <% if current_user %>
                <% if review.user_id == current_user.id %>
                  <%= link_to fa_icon('trash'), product_review_path(@product, review), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </article>
  <% end %>